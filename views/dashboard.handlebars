<h1>Dashboard</h1>
<p>Welcome, {{user}}!</p>

<div class="card">
  <h2>Account Summary</h2>
  <div id="account-summary">
    <p>Loading account data...</p>
  </div>
</div>

<div class="card">
  <h2>Recent Transactions</h2>
  <div id="recent-transactions">
    <p>Loading transaction data...</p>
  </div>
</div>

<script>
  // This would normally fetch data from the server
  // For demo purposes, we'll use static data
  document.addEventListener('DOMContentLoaded', function() {
    const accountSummary = document.getElementById('account-summary');
    const recentTransactions = document.getElementById('recent-transactions');
    
    // Display account summary
    accountSummary.innerHTML = `
      <div>
        <h3>Checking Account</h3>
        <p>Balance: $2,500.00</p>
      </div>
      <div>
        <h3>Savings Account</h3>
        <p>Balance: $10,000.00</p>
      </div>
      <div>
        <h3>Credit Card</h3>
        <p>Balance: -$450.75</p>
      </div>
    `;
    
    // Display recent transactions
    recentTransactions.innerHTML = `
      <table style="width:100%; border-collapse: collapse;">
        <thead>
          <tr>
            <th style="text-align:left;">Date</th>
            <th style="text-align:left;">Description</th>
            <th style="text-align:right;">Amount</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>2025-04-28</td>
            <td>Salary</td>
            <td style="text-align:right; color:green;">+$3,000.00</td>
          </tr>
          <tr>
            <td>2025-05-03</td>
            <td>Grocery Shopping</td>
            <td style="text-align:right; color:red;">-$125.30</td>
          </tr>
          <tr>
            <td>2025-05-08</td>
            <td>Gas Station</td>
            <td style="text-align:right; color:red;">-$45.00</td>
          </tr>
        </tbody>
      </table>
    `;
  });
</script>
